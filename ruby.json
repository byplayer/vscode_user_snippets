{
  // Place your snippets for ruby here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "require": {
    "prefix": "req",
    "body": ["require '${1:lib_name}'"],
    "description": "add require"
  },
  "context": {
    "prefix": "ctx",
    "body": ["context '${1:description}' do", "  $0", "end"],
    "description": "context for rspec"
  },
  "it": {
    "prefix": "it",
    "body": ["it '${1:description}' do", "  $0", "end"],
    "description": "it for rspec"
  },
  "it_s": {
    "prefix": "it_s",
    "body": ["it { expect(${1:expect}).to $0 }"],
    "description": "it single line version for rspec"
  },
  "describe": {
    "prefix": "desc",
    "body": ["describe '${1:description}' do", "  $0", "end"],
    "description": "describe for rspec"
  }
}
